// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// User & Authentication (NextAuth)
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  trees         Tree[]
  treeAccess    TreeAccess[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// Family Tree
// ============================================

model Tree {
  id          String    @id @default(cuid())
  name        String
  description String?   @db.Text
  ownerId     String
  owner       User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  people      Person[]
  treeAccess  TreeAccess[]

  // Privacy
  isPublic    Boolean   @default(false)
  shareToken  String?   @unique

  // Settings
  hideLiving  Boolean   @default(true)
  language    String    @default("en")

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// ============================================
// Person
// ============================================

model Person {
  id          String    @id @default(cuid())
  treeId      String
  tree        Tree      @relation(fields: [treeId], references: [id], onDelete: Cascade)

  // Basic Info
  firstName   String
  middleName  String?
  lastName    String?
  maidenName  String?
  suffix      String?
  nickname    String?
  gender      Gender
  birthDate   DateTime?
  deathDate   DateTime?
  isLiving    Boolean   @default(true)

  // Privacy
  isPublic    Boolean   @default(false)

  // Photos
  photoUrl    String?

  // Relationships - Parent
  fatherId    String?
  father      Person?   @relation("FatherChildren", fields: [fatherId], references: [id])
  childrenAsFather Person[] @relation("FatherChildren")

  motherId    String?
  mother      Person?   @relation("MotherChildren", fields: [motherId], references: [id])
  childrenAsMother Person[] @relation("MotherChildren")

  // Relationships - Spouse
  spouses     Spouse[]  @relation("PersonSpouses")
  spouseOf    Spouse[]  @relation("PersonSpouseInverse")

  // Events & Notes
  events      Event[]
  notes       Note[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([treeId])
  @@index([fatherId])
  @@index([motherId])
}

// ============================================
// Events (Birth, Death, Marriage, etc.)
// ============================================

model Event {
  id          String    @id @default(cuid())
  personId    String
  person      Person    @relation(fields: [personId], references: [id], onDelete: Cascade)

  type        EventType
  date        DateTime?
  location    String?
  description String?   @db.Text
  sources     String?   @db.Text // JSON array of sources

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([personId])
}

// ============================================
// Spouse Relationships
// ============================================

model Spouse {
  id           String    @id @default(cuid())
  personId     String
  person       Person    @relation("PersonSpouses", fields: [personId], references: [id], onDelete: Cascade)
  spouseId     String
  spouse       Person    @relation("PersonSpouseInverse", fields: [spouseId], references: [id], onDelete: Cascade)

  marriageDate DateTime?
  marriageLocation String?
  divorceDate  DateTime?
  isCurrent    Boolean   @default(true)

  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@unique([personId, spouseId])
  @@index([personId])
  @@index([spouseId])
}

// ============================================
// Notes
// ============================================

model Note {
  id          String   @id @default(cuid())
  personId    String
  person      Person   @relation(fields: [personId], references: [id], onDelete: Cascade)
  content     String   @db.Text
  isPrivate   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([personId])
}

// ============================================
// Sharing & Access
// ============================================

model TreeAccess {
  id          String      @id @default(cuid())
  treeId      String
  tree        Tree        @relation(fields: [treeId], references: [id], onDelete: Cascade)
  userId      String?
  user        User?       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userEmail   String
  accessLevel AccessLevel
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@unique([treeId, userEmail])
  @@index([treeId])
  @@index([userEmail])
}

// ============================================
// Enums
// ============================================

enum Gender {
  MALE
  FEMALE
  OTHER
  UNKNOWN
}

enum EventType {
  BIRTH
  DEATH
  MARRIAGE
  DIVORCE
  GRADUATION
  MILITARY
  IMMIGRATION
  CENSUS
  BURIAL
  CHRISTENING
  ENGAGEMENT
  ANNIVERSARY
  CUSTOM
}

enum AccessLevel {
  VIEW
  EDIT
  ADMIN
}
